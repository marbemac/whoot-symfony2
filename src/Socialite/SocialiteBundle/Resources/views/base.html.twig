<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}default title{% endblock %} | Night Chicken</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {% stylesheets 'Resources/css/colorbox.css' 'Resources/css/jquery.qtip.css' '@SocialiteBundle/Resources/css/main.css' %}
                <link href="{{ asset_url }}" media="screen, projection" rel="stylesheet" />
            {% endstylesheets %}
            {% stylesheets '@SocialiteBundle/Resources/css/print.css' %}
                <link href="{{ asset_url }}" media="print" rel="stylesheet" />
            {% endstylesheets %}
            {% stylesheets '@SocialiteBundle/Resources/css/ie.css' %}
                <!--[if lt IE 8]>
                    <link href="{{ asset_url }}" media="screen, projection" type="text/css" rel="stylesheet" />
                <![endif]-->
            {% endstylesheets %}
        {% endblock stylesheets %}
    
        <!--[if IE]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

    </head>
    <body>
        {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div id="splash">
                <div class="auth">
                    <div id="auth-welcome" class="panel {{ app.request.attributes.get('_route') in ['_security_login', 'fos_user_user_new'] ? 'hide' : '' }}">
                        <div>
                            Pretty Welcome Graphics... go!
                        </div>
                        <div class="button" data-target="#auth-login">Login</div>
                        <div class="button" data-target="#auth-register">Register</div>
                    </div>
                    <div id="auth-login" class="panel {{ app.request.attributes.get('_route') != '_security_login' ? 'hide' : '' }}">
                        <h3>Login</h3>
                        {% render "SocialiteBundle:Security:login" with { 'chromeless': true } %}
                        <div class="button" data-target="#auth-welcome">Back to Welcome</div>
                        <div class="button" data-target="#auth-register">Register</div>
                    </div>
                    <div id="auth-register" class="panel {{ app.request.attributes.get('_route') != 'fos_user_user_new' ? 'hide' : '' }}">
                        <h3>Register</h3>
                        {% render "SocialiteBundle:User:new" with { 'chromeless': true } %}
                        <div class="button" data-target="#auth-welcome">Back to Welcome</div>
                        <div class="button" data-target="#auth-login">Login</div>
                    </div>
                </div>
            </div>
        {% else %}
            <div id="wrapper">
                <div id="application">
                    <header id="header">
                        {% block header %}
                        
                            <a class="logo" href="{{ path('homepage') }}">
                                Night Chicken Logo
                            </a>

                            <div id="nav">
                                <a class="" href="{{ path('homepage') }}">Main Feed</a>
                                <a class="" href="{{ path('user_undecided') }}">Undecided Users</a>
                                <a class="" href="#">Open Invites</a>
                            </div>

                        {% endblock header %}
                    </header>
                    <div id="content">
                        {% block content %}

                            <div id="page">
                                {% block page %}

                                    {% block sidebar %}
                                        {% render 'SocialiteBundle:Core:sidebar' %}
                                    {% endblock %}

                                    <div id="page_content">{% block page_content %}{% endblock %}</div>

                                {% endblock page %}
                            </div>

                        {% endblock content %}
                    </div>
                    <footer id="footer">
                        {% block footer %}Footer{% endblock footer %}
                    </footer>
                </div>
            </div>
        {% endif %}
        
        <div id="ajax-loading">Loading...</div>
        <div id="ajax-notice"></div>
        <div id="ajax-success"></div>
        <div id="ajax-error"></div>


        {% block javascripts %}
            <script src="{{ asset('Resources/js/jquery.js') }}"></script>
            <script src="{{ asset('Resources/js/history/scripts/compressed/json2.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.livequery.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.preload.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.countdown.pack.js') }}"></script>
            <script src="{{ asset('Resources/js/amplify/amplify.min.js') }}"></script>
            <script src="{{ asset('Resources/js/history/scripts/compressed/history.adapter.jquery.js') }}"></script>
            <script src="{{ asset('Resources/js/history/scripts/compressed/history.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.colorbox-min.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.qtip.pack.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.core.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.request.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.subscribers.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.action.controller.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.form.controller.js') }}"></script>
            <script src="{{ asset('Resources/js/socialite.main.js') }}"></script>
        {% endblock javascripts %}

        <!-- HIDDEN TOOLS -->
        <div style="dislay: none">
            
        </div>

    </body>
</html>
