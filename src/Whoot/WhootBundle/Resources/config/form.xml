<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>


        <!-- COMMENT -->
        <service id="whoot.form.comment" factory-method="create" factory-service="form.factory" class="%form.factory.class%">
            <argument type="service" id="whoot.form.type.comment" />
            <argument type="collection">
                <argument key="data_class">Whoot\WhootBundle\Entity\Comment</argument>
            </argument>
        </service>

        <service id="whoot.form.type.comment" class="Whoot\WhootBundle\Form\CommentFormType">
            <argument>whoot.form.comment</argument>
            <tag name="form.type" />
        </service>

        <service id="whoot.form.handler.comment" class="Whoot\WhootBundle\Form\CommentFormHandler" scope="request">
            <argument type="service" id="whoot.form.comment" />
            <argument type="service" id="request" />
            <argument type="service" id="whoot.comment_manager" />
            <argument type="service" id="whoot.post_manager" />
        </service>

    </services>

</container>
