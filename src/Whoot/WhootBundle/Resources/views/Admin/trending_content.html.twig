<div class="manage-trending">

    <h4>Uncategorized tags</h4>
    <ul>
        {% for tag in uncategorizedTags %}
            <li class="w-{{ tag.id }}">
                <div class="tag"><div>{{ tag.name }}</div> ({{ tag.score }} popularity)</div>
                <a class="ac" href="{{ path('admin_make_trendable', {'tagId': tag.id}) }}">Make Trendable</a>
                <a class="ac" href="{{ path('admin_make_stoptag', {'tagId': tag.id}) }}">Make Stop tag</a>
            </li>
        {% else %}
            <li class="none">No uncategorized tags. Yahoo.</li>
        {% endfor %}
    </ul>

    <h4>Trendable tags</h4>
    <ul id="admin-trendable">
        {% for tag in trendableTags %}
            {% if tag.name %}
                <li class="w-{{ tag.id }}">
                    <div class="tag"><div>{{ tag.name }}</div> ({{ tag.score }} popularity)</div>
                    <a class="ac" href="{{ path('admin_make_stoptag', {'tagId': tag.id}) }}">Make Stop tag</a>
                </li>
            {% endif %}
        {% else %}
            <li class="none">No trendable tags...</li>
        {% endfor %}
    </ul>

    <h4>Stop tags</h4>
    <ul id="admin-stoptags">
        {% for tag in stopTags %}
            {% if tag.name %}
                <li class="w-{{ tag.id }}">
                    <div class="tag"><div>{{ tag.name }}</div> ({{ tag.score }} popularity)</div>
                    <a class="ac" href="{{ path('admin_make_trendable', {'tagId': tag.id}) }}">Make Trendable</a>
                </li>
            {% endif %}
        {% else %}
            <li class="none">No stop tags...</li>
        {% endfor %}
    </ul>
</div>