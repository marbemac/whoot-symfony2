<form action="{{ path('comment_new') }}" {{ form_enctype(form) }} method="POST" class="comment_new">
    {% include "WhootUserBundle:Profile:profileImage.html.twig" with {'user': app.user, 'dimensions': 28} %}

    {% if comment is defined and comment.content %}
        {{ form_widget(form.content, { 'attr': {'class': 'growfield content'} }) }}
    {% else %}
        {{ form_widget(form.content, { 'value': 'Write a comment...', 'attr': {'class': 'growfield iclear b content'} }) }}
    {% endif %}

    <div class="errors">
        {{ form_errors(form.content) }}
    </div>

    {% if postId is defined %}
       {{ form_widget(form.post, { 'value': postId }) }}
    {% endif %}

    {{ form_rest(form) }}
    <input type="submit" value="Add Comment" class="hide" />
</form>