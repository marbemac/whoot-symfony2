<div id="sidebar">
    <div id="user_panel">
        <h2>
            <a class="name" href="{{ path('user_profile_show', {'username': app.user.username}) }}">
                {{ app.user.fullName }}
            </a>
            <div class="clear"></div>
        </h2>
        <div class="profile_image">
            <a id="profile-image-upload" href="#" data-w="65" data-h="65" data-url="{{ path('user_upload_picture') }}" data-target="#my-profile-image">change</a>
            {% if not app.user.currentProfileImage %}
                <img src="{{ path('user_profile_image', {'w': 65, 'h': 80}) }}" id="my-profile-image" />
            {% else %}
                {% include "MarbemacImageBundle:Image:show.html.twig" with {'groupId': app.user.currentProfileImage, 'w': 65, 'h': 80, 'id': 'my-profile-image'} %}
            {% endif %}
        </div>
        <div class="stats">
            <div class="item">
                <div class="label"><a href="{{ path('user_following', {'username': app.user.username}) }}">Following</a></div>
                <div class="value" id="my-following">{{ app.user.following|length }}</div>
            </div>
            <div class="item">
                <div class="label"><a href="{{ path('user_followers', {'username': app.user.username}) }}">Followers</a></div>
                <div class="value">{{ followers|length }}</div>
            </div>
        </div>
        <a class="small-link" href="{{ path('user_settings', {'username': app.user.username}) }}">Settings</a>
        <a class="small-link" href="{{ path('fos_user_security_logout') }}">
            {{ 'layout.logout'|trans([], 'FOSUserBundle') }}
        </a>
        <div class="clear"></div>
    </div>
    
    {#{% render "EvarioNotificationBundle:Image:notificationCount" %}#}

    {% render 'WhootBundle:Post:myPost' %}

    {#{% render "WhootBundle:LList:list" with {'userId': app.user.id}, {'standalone': true} %}#}

    {% include 'WhootBundle:Post:undecided.html.twig' with {'users': undecidedUsers} %}

</div>