<div class="post-details normal">
    <div class="left">
        {% set activeUsers = post.users|rebuildArray('status', 'Active') %}
        <ul class="users">
            {% for user in activeUsers %}
                <li>
                    <a class="profile-image" href="{{ path('fos_user_user_show', {'username': user.user.username}) }}" title="{{ user.user.firstName }} {{ user.user.lastName }}">
                        <img src="{{ user.user.profileImage is defined ? '/slir/w30-h30-c1:1'~user.user.profileImage : gravatar(user.user.email, '30', 'r', 'mm') }}" alt="" />
                    </a>
                    <a class="name" href="{{ path('fos_user_user_show', {'username': post.createdBy.username}) }}">{{ user.user.firstName }} {{ user.user.lastName }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="right">
        <div class="note">{{ post.note ? '" ' : '' }}{{ post.note|stripSlashes|truncate(75) }}{{ post.note ? ' "' : '' }}</div>

        {% include "WhootBundle:Post:activity.html.twig" with {'post': post, 'activity': activity} %}
    </div>
    <div class="clear"></div>
</div>