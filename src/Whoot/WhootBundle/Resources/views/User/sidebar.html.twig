<div id="user-sidebar">
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>
            
    {% render "WhootBundle:Follow:tag" with {'toUser': user.id} %}

    <img id="user-profile-image" src="{{ user.profileImage is defined ? '/slir/w130-h130-c1:1'~user.profileImage : gravatar(user.email, '130', 'r', 'mm') }}" />
    <ul class="nav">
        <li><a class="{{ navSelected == 'feed' ? 'on' : '' }}" href="{{ path('fos_user_user_show', {'username': user.username}) }}">Feed</a></li>
        <li><a class="{{ navSelected == 'following' ? 'on' : '' }}" href="{{ path('user_following', {'username': user.username}) }}">Following</a></li>
        <li><a class="{{ navSelected == 'followers' ? 'on' : '' }}" href="{{ path('user_followers', {'username': user.username}) }}">Followers</a></li>
        {% if app.user.id == user.id %}
            <li><a class="{{ navSelected == 'settings' ? 'on' : '' }}" href="#">Settings</a></li>
        {% endif %}
    </ul>
</div>