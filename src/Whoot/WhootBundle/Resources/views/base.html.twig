<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}{% endblock %} | The Whoot</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {# gotta get assetic working...
            {% stylesheets filter='?yui_css'
                'bundles/whoot/css/colorbox.css'
                'bundles/whoot/css/jquery.qtip.css'
                'bundles/whoot/css/main.css'
            %}
                <link href="{{ asset_url }}" media="screen, projection" rel="stylesheet" />
            {% endstylesheets %}
            #}

            <link href="{{ asset('Resources/css/colorbox.css') }}" media="screen, projection" rel="stylesheet" />
            <link href="{{ asset('Resources/css/jquery.qtip.css') }}" media="screen, projection" rel="stylesheet" />
            <link href="{{ asset('Resources/css/main.css') }}" media="screen, projection" rel="stylesheet" />

            {% stylesheets 'bundles/whoot/css/print.css' filter='?yui_css' %}
                <link href="{{ asset_url }}" media="print" rel="stylesheet" />
            {% endstylesheets %}
            {% stylesheets 'bundles/whoot/css/ie.css' filter='?yui_css' %}
                <!--[if lt IE 8]>
                    <link href="{{ asset_url }}" media="screen, projection" type="text/css" rel="stylesheet" />
                <![endif]-->
            {% endstylesheets %}
        {% endblock stylesheets %}

        <script type="text/javascript" src="http://use.typekit.com/the3adk.js"></script>
        <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

        <script type="text/javascript" src="http://maps.google.com/maps/api/js?libraries=places&sensor=false"></script>
        
        <!--[if IE]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

    </head>
    <body>
        {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div id="splash">
                <div class="auth">
                    <div id="auth-welcome" class="panel {{ app.request.attributes.get('_route') in ['fos_user_security_login', 'fos_user_registration_register'] ? 'hide' : '' }}">
                        <div>
                            Pretty Welcome Graphics... go!
                        </div>
                        <div class="button" data-target="#auth-login">Login</div>
                        <div class="button" data-target="#auth-register">Register</div>
                    </div>
                    <div id="auth-login" class="panel {{ app.request.attributes.get('_route') != 'fos_user_security_login' ? 'hide' : '' }}">
                        <h3>Login</h3>
                        {% render "WhootUserBundle:Security:login" with { 'chromeless': true } %}
                        <div class="button" data-target="#auth-welcome">Back to Welcome</div>
                        <div class="button" data-target="#auth-register">Register</div>
                    </div>
                    <div id="auth-register" class="panel {{ app.request.attributes.get('_route') != 'fos_user_registration_register' ? 'hide' : '' }}">
                        <h3>Register</h3>
                        {% render "WhootUserBundle:Registration:register" with { 'chromeless': true } %}
                        <div class="button" data-target="#auth-welcome">Back to Welcome</div>
                        <div class="button" data-target="#auth-login">Login</div>
                    </div>
                </div>
            </div>
        {% else %}
            <div id="wrapper">
                <div id="application">
                    {% render "WhootBundle:Core:header" %}

                    {% block sidebar %}
                        {% render 'WhootBundle:Core:sidebar' %}
                    {% endblock %}
                    <div id="content">
                        {% block content %}
                            <div id="page">
                                {% block user_sidebar %}{% endblock %}
                                {% block page %}
                                    <div id="page_content">
                                        {% render "WhootBundle:Post:postBox" %}
                                        {% block page_content %}{% endblock %}
                                    </div>
                                {% endblock page %}
                            </div>

                        {% endblock content %}
                    </div>
                    <footer id="footer">
                        Home &#149;	Blog &#149;	About &#149; Contact Us &#149; Privacy &#149; Terms
                        <fb:like href="http://www.facebook.com/pages/Whoot/192579647454740" send="true" layout="button_count" width="80" show_faces="false" font=""></fb:like>
                    </footer>
                </div>
            </div>
        {% endif %}
        
        <div id="ajax-loading">Loading...</div>
        <div id="ajax-notice"></div>
        <div id="ajax-success"></div>
        <div id="ajax-error"></div>

        {# get assetic working again...
        {% block javascripts %}
            {% javascripts filter='?yui_js'
                'bundles/whoot/js/jquery.js'
                'bundles/whoot/js/json2.js'
                'bundles/whoot/js/jquery.livequery.js'
                'bundles/whoot/js/whoot.preload.js'
                'bundles/whoot/js/jquery-ui.min.js'
                'bundles/whoot/js/swfobject.js'
                'bundles/whoot/js/jquery.countdown.pack.js'
                'bundles/whoot/js/amplify.js'
                'bundles/whoot/js/jquery.colorbox-min.js'
                'bundles/whoot/js/jquery.qtip.js'
                'bundles/whoot/js/fileuploader.js'
                'bundles/whoot/js/whoot.core.js'
                'bundles/whoot/js/whoot.request.js'
                'bundles/whoot/js/whoot.subscribers.js'
                'bundles/whoot/js/whoot.action.controller.js'
                'bundles/whoot/js/whoot.form.controller.js'
                'bundles/whoot/js/whoot.image.js'
                'bundles/whoot/js/whoot.main.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock javascripts %}
        #}

        <script src="{{ asset('Resources/js/jquery.js') }}"></script>
        <script src="{{ asset('Resources/js/json2.js') }}"></script>
        <script src="{{ asset('Resources/js/jquery.livequery.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.preload.js') }}"></script>
        <script src="{{ asset('Resources/js/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('Resources/js/swfobject.js') }}"></script>
        <script src="{{ asset('Resources/js/jquery.countdown.pack.js') }}"></script>
        <script src="{{ asset('Resources/js/amplify.js') }}"></script>
        <script src="{{ asset('Resources/js/jquery.colorbox-min.js') }}"></script>
        <script src="{{ asset('Resources/js/jquery.qtip.js') }}"></script>
        <script src="{{ asset('Resources/js/jquery.growfield.js') }}"></script>
        <script src="{{ asset('Resources/js/fileuploader.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.core.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.request.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.subscribers.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.action.controller.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.form.controller.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.image.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.utilities.js') }}"></script>
        <script src="{{ asset('Resources/js/whoot.main.js') }}"></script>

        <div id="fb-root"></div>
        <script src="http://connect.facebook.net/en_US/all.js#appId=224410564236351&amp;xfbml=1"></script>
        
        <!-- HIDDEN TOOLS -->
        <div style="dislay: none">
            
        </div>

    </body>
</html>
