<!DOCTYPE html>
<html class="{{ ''|gethostname == 'whoot-app' ? 'coming-soon' : '' }}" xmlns:fb="http://www.facebook.com/2008/fbml">
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}{% endblock %} | The Whoot</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {#
            {% stylesheets filter='?yui_css'
                'bundles/whoot/css/colorbox.css'
                'bundles/whoot/css/jquery.qtip.css'
                'bundles/whoot/css/jquery.autocomplete.css'
                'bundles/whoot/css/main.css'
            %}
                <link href="{{ asset_url }}" media="screen, projection" rel="stylesheet" />
            {% endstylesheets %}
            #}

            <link href="{{ asset('Resources/css/colorbox.css') }}" media="screen, projection" rel="stylesheet" />
            <link href="{{ asset('Resources/css/jquery.qtip.css') }}" media="screen, projection" rel="stylesheet" />
            <link href="{{ asset('Resources/css/jquery.autocomplete.css') }}" media="screen, projection" rel="stylesheet" />
            <link href="{{ asset('Resources/css/main.css') }}" media="screen, projection" rel="stylesheet" />

            {% stylesheets 'Resources/css/print.css' filter='?yui_css' %}
                <link href="{{ asset_url }}" media="print" rel="stylesheet" />
            {% endstylesheets %}
            {% stylesheets 'Resources/css/ie.css' filter='?yui_css' %}
                <!--[if lt IE 8]>
                    <link href="{{ asset_url }}" media="screen, projection" type="text/css" rel="stylesheet" />
                <![endif]-->
            {% endstylesheets %}
        {% endblock stylesheets %}

        <script type="text/javascript" src="http://use.typekit.com/the3adk.js"></script>
        <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

        <script type="text/javascript" src="http://maps.google.com/maps/api/js?libraries=places&sensor=false"></script>
        
        <!--[if IE]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {# Google Analytics #}
        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-23850469-1']);
          _gaq.push(['_setDomainName', '.thewhoot.com']);
          _gaq.push(['_setAllowHash', 'false']);
          _gaq.push(['_trackPageview']);
          _gaq.push(['_trackPageLoadTime']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

        </script>

    </head>
    <body class="{{ calculateTimeOfDay() }}">
        <div id="wrapper">
            {{ facebook_initialize({'xfbml': true}) }}

            {# Show the contruction page: #}
            {% if ''|gethostname == 'whoot-app' %}
                {% include "WhootBundle:Core:under_contruction.html.twig" %}
            {% else %}

            {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div id="splash">
                    <div class="auth">
                        {{ facebook_login_button({'autologoutlink': true}) }}
                        <div id="auth-login" class="panel">
                            <h3>Login</h3>
                            {% render "WhootUserBundle:Security:login" with { 'chromeless': true } %}
                        </div>
                        <div id="auth-register" class="panel">
                            <h3>Register</h3>
                            {% render "WhootUserBundle:Registration:register" with { 'chromeless': true } %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div id="application">
                    {% render "WhootBundle:Core:header" with {'page': app.request.attributes.get('_route')} %}

                    {% block sidebar %}
                        {% render 'WhootBundle:Core:sidebar' %}
                    {% endblock %}
                    <div id="content">
                        {% block content %}
                            <div id="page">
                                {% block user_sidebar %}{% endblock %}
                                {% block page %}
                                    <div id="page_content">
                                        {% if app.request.attributes.get('_route') == 'homepage' %}
                                            {% render "WhootBundle:Post:postBox" %}
                                        {% endif %}

                                        {% block page_content %}{% endblock %}
                                    </div>
                                {% endblock page %}
                            </div>

                        {% endblock content %}
                    </div>
                    <footer id="footer">
                        Home &#149;	Blog &#149;	About &#149; Contact Us &#149; Privacy &#149; Terms
                        <fb:like href="http://www.facebook.com/pages/Whoot/192579647454740" send="true" layout="button_count" width="80" show_faces="false" font=""></fb:like>
                    </footer>
                </div>
            {% endif %}

            <div id="ajax-loading">Loading...</div>
            <div id="ajax-notice"></div>
            <div id="ajax-success"></div>
            <div id="ajax-error"></div>

            {#
            {% javascripts filter='?yui_js'
                'Resources/js/jquery.js'
                'Resources/js/json2.js'
                'Resources/js/jquery.livequery.js'
                'Resources/js/whoot.preload.js'
                'Resources/js/jquery-ui.min.js'
                'Resources/js/swfobject.js'
                'Resources/js/amplify.js'
                'Resources/js/jquery.countdown.pack.js'
                'Resources/js/jquery.colorbox-min.js'
                'Resources/js/jquery.qtip.js'
                'Resources/js/jquery.growfield.js'
                'Resources/js/jquery.autocomplete.js'
                'Resources/js/jquery.scroll.js'
                'Resources/js/jquery.timer.js'
                'Resources/js/fileuploader.js'
                'Resources/js/whoot.core.js'
                'Resources/js/whoot.request.js'
                'Resources/js/whoot.subscribers.js'
                'Resources/js/whoot.action.controller.js'
                'Resources/js/whoot.form.controller.js'
                'Resources/js/whoot.image.js'
                'Resources/js/whoot.utilities.js'
                'Resources/js/whoot.main.js'
            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
            #}

            <script src="{{ asset('Resources/js/jquery.js') }}"></script>
            <script src="{{ asset('Resources/js/json2.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.livequery.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.preload.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('Resources/js/swfobject.js') }}"></script>
            <script src="{{ asset('Resources/js/amplify.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.countdown.pack.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.colorbox-min.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.qtip.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.growfield.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.autocomplete.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.scroll.js') }}"></script>
            <script src="{{ asset('Resources/js/jquery.timer.js') }}"></script>
            <script src="{{ asset('Resources/js/fileuploader.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.core.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.request.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.subscribers.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.action.controller.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.form.controller.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.image.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.utilities.js') }}"></script>
            <script src="{{ asset('Resources/js/whoot.main.js') }}"></script>

            <script>
                window.fbAsyncInit = (function(originalFunc) {
                    return function() {
                        if (originalFunc)
                        {
                            originalFunc();
                        }

                        FB.Event.subscribe('auth.login', function(response) {
                            window.location = '{{ path('facebook_security_check') }}';
                        });
                        FB.Event.subscribe('auth.logout', function(response) {
                            window.location = '{{ path('_security_logout') }}';
                        });
                    };
                })(window.fbAsyncInit);
            </script>

            {# HIDDEN TOOLS #}
            <div style="dislay: none">

            </div>

            {% endif %} {# end the under contruction loop #}
        </div>
        {# Background Starscape #}
        {% if calculateTimeOfDay() != 'day' %}
            <div id="stars-bg" class="{{ calculateTimeOfDay() == 'sunset' ? 'fade' : '' }}">&nbsp;</div>
        {% endif %}
        <div id="city-bg">&nbsp;</div>
    </body>
</html>
