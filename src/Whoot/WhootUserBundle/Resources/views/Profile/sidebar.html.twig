<div id="user-sidebar">
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>
            
    {% render "WhootBundle:Follow:tag" with {'toUser': user.id} %}

    {% include "WhootBundle:User:profileImage.html.twig" with {'user': user, 'dimensions': 130, 'height': 165, 'width': 130, 'id': 'user-profile-image'} %}
    <ul class="nav">
        <li><a class="{{ navSelected == 'feed' ? 'on' : '' }}" href="{{ path('user_profile_show', {'username': user.username}) }}">Feed</a></li>
        <li><a class="{{ navSelected == 'following' ? 'on' : '' }}" href="{{ path('user_following', {'username': user.username}) }}">Following</a></li>
        <li><a class="{{ navSelected == 'followers' ? 'on' : '' }}" href="{{ path('user_followers', {'username': user.username}) }}">Followers</a></li>
        {% if app.user.id == user.id %}
            <li><a class="{{ navSelected == 'settings' ? 'on' : '' }}" href="{{ path('user_settings', {'username': user.username}) }}">Settings</a></li>
        {% endif %}
    </ul>
</div>