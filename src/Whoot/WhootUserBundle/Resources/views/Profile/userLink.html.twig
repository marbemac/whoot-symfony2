<a class="user-link user-{{ user.id }}" href="{{ path('user_profile_show', {'username': user.username}) }}" data-d='{"id":"{{ user.id }}", "tab":"{{ path('user_hover_tab', {'id':user.id}) }}"}'>
    <div class="drag-handleC" title="Drag this user to a list to add him/her!">
        <div></div>
    </div>
    {% if nameLimit is defined %}
        {{ (user.firstName~' '~user.lastName)|truncate(nameLimit, '..') }}
    {% else %}
        {{ user.firstName~' '~user.lastName }}
    {% endif %}
</a>